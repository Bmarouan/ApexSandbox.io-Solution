public List<String> getFieldsValue(Account acc, List<String> fields)
{
 List<String> fieldValues = new List<String>();

    for (String field : fields) {
        Object value = acc.get(field);
        // Convert the Object to String and handle null values appropriately
        fieldValues.add(value != null ? String.valueOf(value) : null);
    }

    return fieldValues;
}
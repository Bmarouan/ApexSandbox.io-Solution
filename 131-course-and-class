public void createCourseAndClass(String name, String description) {
    apxio__Course__c course = new apxio__Course__c();

        if (name != null && description != null){
            course.name = name;
            course.apxio__Course_Details__c = description;
        }
    insert course;

    apxio__Class__c  classe = new apxio__Class__c();
    classe.name = course.name;
    classe.apxio__Description__c = course.apxio__Course_Details__c;

    classe.apxio__Course__c = course.Id;

    insert classe;
}
public void createCourseAndClass(String name, String description) {
    apxio__Course__c course = new apxio__Course__c();
    if (course.name != null && course.apxio__Description__c != null){
        course.name = name;
        course.description = apxio__Course_Details__c;
    }
    insert course;

    apxio__Class__c  classe = new apxio__Class__c();
    classe.name = course.name;
    classe.description = course.description;

    insert classe;
}